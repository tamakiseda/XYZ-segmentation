{
  "name": "Python 3",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "Home.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "[ -f packages.txt ] && sudo apt update && sudo apt upgrade -y && sudo xargs apt install -y <packages.txt; [ -f requirements.txt ] && pip3 install --user -r requirements.txt; pip3 install --user streamlit; echo 'âœ… Packages installed and Requirements met'",
  "postAttachCommand": {
    "server": "streamlit run Hello.py --server.enableCORS false --server.enableXsrfProtection false"
  },
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ]
  "classification": {
        "RandomForestClassifier": {
            "n_estimators": 100,
            "criterion": {
                "options": [
                    "gini",
                    "entropy",
                    "log_loss"
                ],
                "default": "gini"
            },
            "max_depth": 12,
            "min_samples_split": 2
        }
    },
    "cluster": {
        "KMeans": {
            "n_clusters": 3,
            "init": {
                "options": [
                    "k-means++",
                    "random"
                ],
                "default": "random"
            },
            "max_iter": 300,
            "random_state": 42
        }
    },
    "regression": {
        "Lasso": {
            "alpha": 1.05,
            "random_state": null
        },
        "RandomForestRegressor": {
            "n_estimators": 100,
            "criterion": {
                "options": [
                    "squared_error",
                    "absolute_error",
                    "friedman_mse",
                    "poisson"
                ],
                "default": "squared_error"
            },
            "max_depth": null,
            "min_samples_split": 2,
            "min_samples_leaf": 1
        },
        "DecisionTreeRegressor": {
            "criterion": {
                "options": [
                    "squared_error",
                    "friedman_mse",
                    "absolute_error",
                    "poisson"
                ],
                "default": "squared_error"
            },
            "splitter": {
                "options": [
                    "best",
                    "random"
                ],
                "default": "best"
            },
            "max_depth": null,
            "min_samples_split": 2
        }
    }
}
